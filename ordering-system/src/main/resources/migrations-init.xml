<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext
    http://www.liquibase.org/xml/ns/pro
    http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="amoore" id="create_tables">
      <createTable tableName="customers">
        <column name="customer_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="customer_first_name" type="varchar(20)" />
        <column name="customer_last_name" type="varchar(20)" />
        <column name="customer_address_one" type="varchar(40)" />
        <column name="customer_address_two" type="varchar(40)" />
        <column name="customer_city" type="varchar(40)" />
        <column name="customer_state" type="varchar(2)" />
        <column name="customer_zip_code" type="varchar(6)" />
        <column name="customer_phone_number" type="varchar(15)" />
        <column name="customer_email" type="varchar(20)" />
      </createTable>

      <createTable tableName="shipping_address">
        <column name="shipping_address_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="shipping_address_name" type="varchar(40)" />
        <column name="shipping_address_one" type="varchar(40)" />
        <column name="shipping_address_two" type="varchar(40)" />
        <column name="shipping_address_city" type="varchar(40)" />
        <column name="shipping_address_state" type="varchar(2)" />
        <column name="shipping_address_zip_code" type="varchar(6)" />
        <column name="shipping_address_phone" type="varchar(15)" />
        <column name="shipping_address_email" type="varchar(40)" />
      </createTable>

      <createTable tableName="order_details">
        <column name="order_detail_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="customer_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="shipping_address_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="payment_type" type="varchar(20)" />
        <column name="order_detail_total" type="int" />
      </createTable>

      <createTable tableName="orders">
        <column name="order_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="order_detail_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="product_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="order_date" type="timestamp with time zone">
          <constraints nullable="false" />
        </column>
        <column name="order_total" type="double" />
      </createTable>

      <createTable tableName="products">
        <column name="product_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="product_name" type="varchar(20)" />
        <column name="product_type" type="varchar(20)" />
        <column name="product_price" type="double" />
        <column name="product_description" type="varchar(70)" />
        <column name="product_quantity" type="int" />
      </createTable>

      <createTable tableName="carts">
        <column name="cart_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="product_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="cart_quantity" type="int" />
      </createTable>

      <createTable tableName="customer_carts">
        <column name="customer_cart_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="customer_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="cart_id" type="bigint">
          <constraints nullable="false" />
        </column>
      </createTable>
    </changeSet>
</databaseChangeLog>
