<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="amoore3234" author="author">
      <createTable tableName="customers">
        <column name="customer_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="first_name" type="varchar(20)" />
        <column name="last_name" type="varchar(20)" />
        <column name="address_one" type="varchar(40)" />
        <column name="address_two" type="varchar(40)" />
        <column name="customer_city" type="varchar(20)" />
        <column name="customer_state" type="varchar(2)" />
        <column name="customer_zip_code" type="varchar(6)" />
        <column name="customer_phone_number" type="varchar(15)" />
        <column name="customer_email" type="varchar(20)" />
      </createTable>

      <createTable tableName="delivery_address">
        <column name="delivery_address_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="delivery_address_name" type="varchar(40)" />
        <column name="delivery_address_one" type="varchar(40)" />
        <column name="delivery_address_two" type="varchar(40)" />
        <column name="deliver_address_city" type="varchar(20)" />
        <column name="delivery_address_state" type="varchar(2)" />
        <column name="delivery_address_zip_code" type="varchar(6)" />
        <column name="delivery_address_phone" type="varchar(15)" />
        <column name="delivery_address_email" type="varchar(20)" />
      </createTable>

      <createTable tableName="orders">
        <column name="order_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="customer_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="delivery_address_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="payment_type" type="varchar(20)" />
        <column name="order_total" type="int" />
      </createTable>

      <createTable tableName="order_details">
        <column name="order_details_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="order_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="product_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="date" type="timestamp with time zone">
          <constraints nullable="false" />
        </column>
        <column name="order_detail_total" type="int" />
      </createTable>

      <createTable tableName="product">
        <column name="product_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="product_name" type="varchar(20)" />
        <column name="product_price" type="double" />
        <column name="product_description" type="varchar(40)" />
        <column name="product_quantity" type="int" />
      </createTable>

      <createTable tableName="cart">
        <column name="cart_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="product_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="cart_quantity" type="int" />
      </createTable>

      <createTable tableName="customer_cart">
        <column name="customer_cart_id" type="bigint" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="customer_id" type="bigint">
          <constraints nullable="false" />
        </column>
        <column name="cart_id" type="bigint">
          <constraints nullable="false" />
        </column>
      </createTable>
    </changeSet>
</databaseChangeLog>